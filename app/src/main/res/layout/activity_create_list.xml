<!--Activity for creating a list when you click add-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shopbroker.CreateListActivity"
    android:background="#03aaa8a6"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:id="@+id/totalText"
        android:layout_centerHorizontal="true"
        android:background="#CCffea49"
        android:backgroundTint="#ff9fff75"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalNumeric"
        android:text="0.00"
        android:gravity="center"
        android:layout_alignTop="@+id/totalText"
        android:layout_toRightOf="@+id/totalText"
        android:layout_toEndOf="@+id/totalText"
        android:background="#CCffea49"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Mine"
        android:id="@+id/buttonMine"
        android:onClick="addToMine"
        android:layout_below="@+id/totalText"
        android:layout_marginTop="10dp"
        android:background="#ccffe243"
        android:typeface="serif" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Shared"
        android:id="@+id/buttonShared"
        android:onClick="addToShared"
        android:layout_toRightOf="@+id/buttonMine"
        android:layout_alignTop="@+id/buttonMine"
        android:background="#ccff8d5f"
        android:typeface="serif" />
    <EditText
        android:id="@+id/editTextItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/buttonShared"
        android:layout_alignTop="@+id/buttonShared"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/buttonMine"
        android:paddingTop="2dp"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:id="@+id/mineLinearL"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".5"
            android:nestedScrollingEnabled="false"
            android:background="#02ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine"
                android:id="@+id/mineText"
                android:textStyle="bold" />
            <ListView
                android:id="@+id/listViewMine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#99fff118">
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sharedLinearL"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".5"
            android:background="#48ffffff">
            <TextView
                android:text="@string/shared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sharedText"
                android:textStyle="bold" />
            <ListView
                android:id="@+id/listViewShared"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccff9762">
            </ListView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
