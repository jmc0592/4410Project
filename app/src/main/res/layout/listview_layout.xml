<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listname"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowID"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listname"
        android:layout_toEndOf="@+id/listname"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listdate"
        android:layout_alignBaseline="@+id/rowID"
        android:layout_alignBottom="@+id/rowID"
        android:layout_toRightOf="@+id/rowID"
        android:layout_toEndOf="@+id/rowID"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />
</RelativeLayout>